# BUILD
FROM node:20-alpine AS build
WORKDIR /app
RUN apk add --no-cache git openssl
COPY package.json package-lock.json* ./
RUN if [ -f package-lock.json ]; then npm ci --no-audit --no-fund || (echo 'npm ci failed, trying npm install' && npm install --no-audit --no-fund --legacy-peer-deps); else npm install --no-audit --no-fund --legacy-peer-deps; fi
COPY . .
ARG VITE_API_BASE=/api
ENV VITE_API_BASE=$VITE_API_BASE
RUN npm run build

# RUNTIME
FROM nginx:1.25-alpine
WORKDIR /usr/share/nginx/html
COPY --from=build /app/dist .
RUN printf 'server { listen 80; server_name _; root /usr/share/nginx/html; location / { try_files $uri /index.html; } }' > /etc/nginx/conf.d/default.conf
EXPOSE 80
HEALTHCHECK CMD wget -qO- http://localhost || exit 1
